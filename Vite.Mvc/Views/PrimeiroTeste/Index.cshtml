@model List<Crud>

@{
    ViewData["Title"] = "Lista";
    Layout = "_Layout";
}

<section class="content">
    <div class="container-fluid">
        <h2>CRUD com Vue + SweetAlert2</h2>
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Itens</h3>
                <div class="card-tools">
                    <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus"></i> Novo
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <p>Nenhum item cadastrado.</p>
                }
                else
                {
                    <table class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nome</th>
                            <th style="width: 150px;">Ações</th>
                        </tr>
                        </thead>
                        <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Nome</td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = Model[i].Id })" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = Model[i].Id })" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</section>
